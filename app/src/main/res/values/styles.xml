<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <!-- ADD HOUSING FRAGMENT -->

    <style name="add_housing_spinner">
        <item name="android:background">@drawable/test_spinner</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:spinnerMode">dropdown</item>
    </style>

    <style name="add_housing_spinner_big" parent="add_housing_spinner">
        <item name="android:layout_width">240dp</item>
    </style>

    <style name="add_housing_spinner_little" parent="add_housing_spinner">
        <item name="android:layout_width">80dp</item>
    </style>

    <style name="add_housing_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:spinnerMode">dropdown</item>
    </style>

</resources>
