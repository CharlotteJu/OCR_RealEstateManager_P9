<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/item_estate_agent_name"
        android:layout_width="@dimen/constraint_width_0"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/item_estate_agent_margin"
        android:layout_marginBottom="@dimen/item_estate_agent_margin"
        android:layout_marginStart="@dimen/item_estate_agent_margin"
        android:textSize="@dimen/item_estate_agent_text_size"
        android:text="NAME"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageButton
        android:id="@+id/item_estate_agent_delete_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_delete_24"
        app:backgroundTint="@android:color/transparent"
        android:layout_marginEnd="@dimen/item_estate_agent_margin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <View
        android:layout_width="@dimen/view_separator_width"
        android:layout_height="@dimen/view_separator_height"
        android:background="@color/colorGrey"
        android:layout_marginStart="@dimen/item_estate_agent_margin"
        android:layout_marginEnd="@dimen/item_estate_agent_margin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>