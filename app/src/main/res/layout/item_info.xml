<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="4dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/item_info_ic"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_baseline_surface_24"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/detail_fragment_surface_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SURFACE"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toEndOf="@id/item_info_ic"
        app:layout_constraintTop_toTopOf="@id/item_info_ic"
        app:layout_constraintBottom_toBottomOf="@id/item_info_ic"/>



</androidx.constraintlayout.widget.ConstraintLayout>